<h1>Sign In</h1>

<%= form_with model: @user, url: sign_in_path do |form | %>


  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control", placeholder: "matt@gmail.com" %>
  </div>


  <div class="mb-3">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
  </div>
  <%= form.submit "Sign In", class: "btn btn-primary", type: "submit" %>


<% end %>